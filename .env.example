# Copy this file to .env and fill in the values
# ============================================================

# --- Directus Core ---
DIRECTUS_SECRET=
ADMIN_EMAIL=admin@asigurari.ro
ADMIN_PASSWORD=
DIRECTUS_PORT=8055
PUBLIC_URL=http://localhost:8055

# --- PostgreSQL (Directus internal DB) ---
DB_DATABASE=directus
DB_USER=directus
DB_PASSWORD=
DB_PORT_EXTERNAL=5433

# --- CORS ---
CORS_ORIGIN=https://www.asigurari.ro,http://localhost

# --- Email (SMTP) ---
EMAIL_FROM=noreply@asigurari.ro
EMAIL_TRANSPORT=smtp
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_SECURE=false

# --- Google OAuth ---
AUTH_PROVIDERS=local
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
CONTRIBUTOR_ROLE_ID=

# --- n8n Automation ---
N8N_PORT=5678
N8N_HOST=localhost
N8N_PROTOCOL=http
N8N_WEBHOOK_URL=http://localhost:5678
N8N_USER=admin
N8N_PASSWORD=

# --- MongoDB (used by Directus mongo-sync hook) ---
MONGO_URI=mongodb://192.168.0.31:27017
MONGO_DB=wib_test
# Production: MONGO_URI=mongodb://192.168.0.203:27017

# --- Logging ---
LOG_LEVEL=info
